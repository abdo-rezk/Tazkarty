@using PagedList.Mvc;
@using PagedList;
@model IPagedList<Tazkarty.Models.Cinema>

@{
    ViewBag.Title = "Cinemas in ";
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Logo)</th>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Description)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var act in Model)
        {
            <tr>
                <td class="align-middle">
                    <img class="rounded-circle" src="@act.Logo" alt="@act.Name" style="max-width :150px" />
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(m => act.Name)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(m => act.Description)
                </td>
                <td class="align-middle">
                    <a class="btn btn-success"><i class="bi bi-pen"></i> Edit</a>
                    <a class="btn btn-outline-primary"> <i class="bi bi-eye"></i> Details</a>
                    <a class="btn btn-danger"> <i class="bi bi-trash"></i>Delete</a>

                </td>

            </tr>
        }


    </tbody>
</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, i => Url.Action("Index", "Cinema", new { i }))
